<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/primaryAppColor">


    <ImageView
        android:id="@+id/woman_logo"
        android:layout_width="443dp"
        android:layout_height="354dp"
        android:src="@drawable/ic_loading_woman"
        android:layout_marginLeft="10dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/into_text_loading"
        android:layout_width="412dp"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:letterSpacing="0.15"
        android:padding="18dp"
        android:text="@string/loading_page_intro_text"
        android:textColor="@color/white"
        android:textSize="48sp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/woman_logo"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/get_started_button"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:text="@string/get_started"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/rounded_button"
        android:paddingBottom="20dp"
        android:textColor="@color/primaryAppColor"
        android:paddingTop="20dp"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/into_text_loading"/>

</androidx.constraintlayout.widget.ConstraintLayout>